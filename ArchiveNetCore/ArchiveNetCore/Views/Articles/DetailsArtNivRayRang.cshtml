@model IEnumerable<ArchiveNetCore.Models.Articles>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                *
            </th>
            <th>
                @Html.DisplayNameFor(model => model.libelle)
            </th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desc)
            </th>
            <th>
                Niveau
            </th>
            <th>
                @Html.DisplayNameFor(model => model.range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rayon)
            </th>
            <th>
                Ref entrepots
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.libelle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.desc)
                </td>
                @if (item.niv != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.niv)
                    </td>
                }
                else
                {
                    <td></td>
                }
                @if (item.range != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.range)
                    </td>
                }
                else
                {
                    <td></td>
                }
                @if (item.rayon != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.rayon)
                    </td>
                }
                else
                {
                    <td></td>
                }
                @if (item.niv != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.idEntrepot)
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
