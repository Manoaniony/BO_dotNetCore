@model List<Articles>

@{
    ViewData["Title"] = "ArticleNonPlace";
}
<div class="pagetitle">
    <h1>@ViewData["libelle"]</h1>
    <nav>
        <ol class="breadcrumb">
            <!--li class="breadcrumb-item"><a href="index.html"><i class="bi bi-house-door"></i></a></li-->
            <li class="breadcrumb-item"><a>@ViewData["niv"]</i></a></li>
            <li class="breadcrumb-item active">Rayon : @ViewData["rayon"]</li>
            <li class="breadcrumb-item active">Rangée : @ViewData["range"]</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <form id="miseEnPlaceArticle" class="row g-3" method="POST" action="@Url.Action("MiseEnPlaceArticle", "Articles")">

            <input type="hidden" name="ref_entrepot" value="@ViewData["idEntrepots"]">
            <input type="hidden" name="rayon" value="@ViewData["rayon"]">
            <input type="hidden" name="range" value="@ViewData["range"]">
            <input type="hidden" name="niv" value="@ViewData["niv"]">

            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des articles</h5>

                        <table id="table" class="table table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>N°</th>
                                    <th>Libelle</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input type="checkbox" name="art_selected[]" value="@item.Id"></td>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.libelle)</td>
                                        <td>@Html.DisplayFor(modelItem => item.desc)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" id="submitBtn" class="btn btn-primary"
                        data-mise-en-place-url="@Url.Action("MiseEnPlaceArticle", "Articles")"
                        data-index-url="@Url.Action("Index", "Articles")">
                    Placer
                </button>
            </div>
        </form>
    </div>
</section> 
