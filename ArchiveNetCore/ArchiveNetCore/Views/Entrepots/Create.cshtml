@model ArchiveNetCore.Models.Entrepots

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Ajout entrepôt</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html"><i class="bi bi-house-door"></i></a></li>
            <li class="breadcrumb-item"><a href="entrepots.html">Entrepôts</a></li>
            <li class="breadcrumb-item active">Ajout</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Informations de l'entrepôt</h5>

                    <!-- Floating Labels Form -->
                    <form id="form" class="row g-3" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingLib" asp-for="libelle">
                                <label asp-for="libelle" for="floatingLib">Libelle</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="floatingRayon" asp-for="nbre_rayon">
                                <label asp-for="nbre_rayon" for="floatingRayon">Nombre de rayons</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="nbre_niveau" type="number" class="form-control" id="floatingRange">
                                <label asp-for="nbre_niveau" for="floatingRange">Nombre de niveau</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="nbre_range" type="number" class="form-control" id="floatingRange">
                                <label asp-for="nbre_range" for="floatingRange">Nombre de range</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="desc" class="form-control" id="floatingDesc" style="height: 235px;"></textarea>
                                <label asp-for="desc" for="floatingDesc">Description</label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <button type="reset" class="btn btn-secondary">Annuler</button>
                        </div>
                    </form><!-- End floating Labels Form -->

                </div>
            </div>

        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
